<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:osgi="http://www.springframework.org/schema/osgi"
	xmlns:aop="http://www.springframework.org/schema/aop" xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
  http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans.xsd
  http://www.springframework.org/schema/osgi
  http://www.springframework.org/schema/osgi/spring-osgi.xsd
  http://www.springframework.org/schema/tx
  http://www.springframework.org/schema/tx/spring-tx-3.0.xsd
  http://www.springframework.org/schema/context
  http://www.springframework.org/schema/context/spring-context.xsd
  http://www.springframework.org/schema/aop 
  http://www.springframework.org/schema/aop/spring-aop-3.0.xsd">

	<osgi:reference id="activityRepository"
		interface="interactivespaces.master.server.services.ActivityRepository"
		availability="mandatory" />
    <osgi:reference id="automationRepository"
        interface="interactivespaces.master.server.services.AutomationRepository"
        availability="mandatory" />
	<osgi:reference id="controllerRepository"
		interface="interactivespaces.master.server.services.ControllerRepository"
		availability="mandatory" />
	<osgi:reference id="interactivespaces.master.controller.active"
		interface="interactivespaces.master.server.services.ActiveControllerManager"
		availability="mandatory" />
	<osgi:reference id="interactivespaces.master.space.active"
		interface="interactivespaces.master.server.services.ActiveSpaceManager"
		availability="mandatory" />
	<osgi:reference id="interactivespaces.master.ui.activity"
		interface="interactivespaces.master.server.ui.UiActivityManager"
		availability="mandatory" />
    <osgi:reference id="interactivespaces.master.ui.automation"
        interface="interactivespaces.master.server.ui.UiAutomationManager"
        availability="mandatory" />
    <osgi:reference id="interactivespaces.master.ui.support"
        interface="interactivespaces.master.server.ui.UiMasterSupportManager"
        availability="mandatory" />
    <osgi:reference id="interactivespaces.master.extension"
        interface="interactivespaces.master.server.services.ExtensionManager"
        availability="mandatory" />
    	<osgi:reference id="interactivespaces.master.ui.controller"
		interface="interactivespaces.master.server.ui.UiControllerManager"
		availability="mandatory" />
	<osgi:reference id="interactivespaces.master.ui.space"
		interface="interactivespaces.master.server.ui.UiSpaceManager"
		availability="mandatory" />

	<osgi:reference id="interactivespaces.master.networkinfo.client"
		interface="interactivespaces.network.client.NetworkInformationClient"
		availability="mandatory" />
	
    <osgi:reference id="interactivespaces.environment"
        interface="interactivespaces.system.InteractiveSpacesEnvironment"
        availability="mandatory" />
	
</beans>
